


<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>
  <div class="input-group">
    <%= f.label t(:name), class: 'input-group-addon' %>
    <%= f.text_field :name, maxlength: 10, class: 'form-control' %>
  </div>
  
  <div class="input-group">
    <%= f.label t(:age), class: 'input-group-addon' %>
    <%= f.number_field :age, min: 1, max: 99, step: 1, class: 'form-control' %>
  </div>

  <div class="input-group">
    <%= f.label t(:body), class: 'input-group-addon' %>
    <%= f.text_area :body, maxlength: 50, class: 'form-control' %>
  </div>

  <div class="btn-group">
    <%= f.submit class: 'btn btn-sm btn-primary' %>
  </div>
<% end %>
