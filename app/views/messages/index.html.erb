

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info">名前:<%= message.name %></span>
      <span class="glyphicon glyphicon-user">年齢:<%= message.age %></span>
      <span class="glyphicon glyphicon-star-empty">コメント:<%= message.body %></span>
      
       (<%= link_to "edit" , edit_message_path(message) %>)
        <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        
      <br>
    <% end %>
  </div>
</div>


<%= render 'form' %>




