


<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>

 <div class="form-group">
 <label for="input" class="input-group-addon">名前</label>
  <div class="col-sm-4">
   <%= f.text_field :name, size: "form-control", placeholder:"例：小山　雅史" %>
  </div>
</div>

<div class="form-group">
 <label for="body" class="col-sm-2 control-label">内容</label>
 <div class="col-sm-4">
  <%= f.text_area :body, size: "form-control", placeholder:"例:はじめまして" %>
 </div>
</div>

<div class="btn-group">
   <div class="col-sm-4">
   <%= f.submit class: "btn btn-sm btn-primary" %>
　 </div>
 </div>


<% end %>
